    css historico 
    .balance-card, .assistant-card, .transactions-card, .history-card, .bill-card, .reminder-card {
        background-color: #a9e4b3;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adiciona uma leve sombra */
        border: 1px solid #8bc089; /* Adiciona uma borda sutil para definição */
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out; /* Suaviza a interação */
    
        /* Melhorias visuais ao interagir */
        cursor: pointer;
    }
    
    .balance-card:hover, .assistant-card:hover, .transactions-card:hover, .history-card:hover, .bill-card:hover, .reminder-card:hover {
        transform: translateY(-5px); /* Eleva o card ao passar o mouse */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Intensifica a sombra ao passar o mouse */
    }
    
    .history-card h2 {
        color: #2e7d32; /* Verde mais escuro para o título */
        font-size: 1.5em; /* Tamanho de fonte maior para destaque */
        margin-bottom: 15px;
        text-transform: uppercase;
    }
    
    .history-card ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .history-card ul li {
        background-color: #d7f2db; /* Fundo levemente mais claro para os itens */
        padding: 10px 15px;
        margin-bottom: 10px;
        border-radius: 5px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.3s ease;
    }
    
    .history-card ul li:hover {
        background-color: #c8e6ca; /* Muda o fundo ao passar o mouse */
    }
    
    .history-card ul li .historico {
        color: #2e7d32; /* Cor de texto verde escuro */
        font-weight: 600; /* Destaca o texto */
    }
    
    .history-card ul li span {
        color: #2e7d32; /* Cor verde escura para o valor */
        font-weight: 600;
    }
    


